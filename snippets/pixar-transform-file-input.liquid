        })
        .catch(error => {
          console.error('🧪 TEST: ❌ ERROR - Exception in transform call:', error);
        });
      }
      
      // Function to test checking job status
      function testCheckStatus(jobId) {
        return new Promise((resolve) => {
          console.log('🧪 TEST: Checking job status for:', jobId);
          
          fetch(`https://letzteshemd-faceswap-api-production.up.railway.app/status/${jobId}`, {
            method: 'GET'
          })
          .then(response => response.json())
          .then(data => {
            console.log('🧪 TEST: Job status check response:', data);
            
            // Be more flexible with various status formats
            const status = data.status || '';
            
            if (status.toUpperCase() === 'COMPLETED') {
              console.log('🧪 TEST: Job is complete');
              resolve(true);
            } else if (status.toUpperCase() === 'FAILED') {
              console.error('🧪 TEST: Job failed during processing');
              resolve(true); // Resolve true to indicate polling should stop
            } else {
              console.log('🧪 TEST: Job still processing...');
              resolve(false); // Resolve false to indicate polling should continue
            }
          })
          .catch(error => {
            console.error('🧪 TEST: Error during status check:', error);
            resolve(true); // Resolve true on error to stop polling
          });
        });
      }
      
      // Function to test polling for job completion
      function testPollForCompletion(jobId) {
        console.log('🧪 TEST: Polling for job completion:', jobId);
        
        // Test poll once, then set interval for continued polling
        const testPollInterval = setInterval(() => {
          testCheckStatus(jobId).then(completed => {
            if (completed) {
