<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Cartoonique cart image processor initialized');
    
    // Function to process cart images
    function processCartImages() {
      // Find all cart items
      const cartItems = document.querySelectorAll('.cart-item');
      console.log('Found', cartItems.length, 'cart items to process');
      
      if (cartItems.length === 0) return;
      
      // Get stored images from various sources
      let storedImages = {};
      
      // Function to get images from localStorage
      function getStoredImages() {
        try {
          // Try multiple storage methods
          const cartImages = localStorage.getItem('cartoonique_cart_images');
          if (cartImages) {
            return JSON.parse(cartImages);
          }
          
          // Check for navigation data
          const navData = localStorage.getItem('cartoonique_navigation_data');
          if (navData) {
            const data = JSON.parse(navData);
            if (data && data.variantId && data.imageUrl) {
              const result = {};
              result[data.variantId] = data.imageUrl;
              return result;
            }
          }
          
          // Check in window memory if available
          if (window.cartoonique_memory_images) {
            return window.cartoonique_memory_images;
          }
          
          // Check blob URLs
          if (window.cartoonique_blob_urls) {
            return window.cartoonique_blob_urls;
          }
          
          return {};
        } catch (e) {
          console.error('Error getting stored images:', e);
          return {};
        }
      }
      
      // Get stored images
      storedImages = getStoredImages();
      console.log('Found stored images for', Object.keys(storedImages).length, 'variants');
      
      // Process each cart item
      cartItems.forEach(item => {
        // Get variant ID
        const variantId = item.getAttribute('data-variant-id');
        if (!variantId) return;
        
        // Look for image in stored images
        if (storedImages[variantId]) {
          console.log('Found stored image for variant', variantId);
          
          // Find the image element
          const imgElements = item.querySelectorAll('img');
          imgElements.forEach(img => {
            if (img.classList.contains('cart-item__image') || 
                img.parentElement.classList.contains('cart-item__image-wrapper')) {
              // Replace image
              img.srcset = '';
              img.sizes = '';
              img.src = storedImages[variantId];
              img.style.objectFit = 'contain';
              img.setAttribute('data-processed', 'true');
              img.style.aspectRatio = '3/4';
              
              console.log('Replaced image for variant', variantId);
            }
          });
        }
      });
    }
    
    // Run image processor
    processCartImages();
    
    // Also run after a delay to catch any dynamic updates
    setTimeout(processCartImages, 1000);
    
    // Observe DOM changes to apply to dynamically added elements
    if (typeof MutationObserver !== 'undefined') {
      const cartContainer = document.querySelector('.cart');
      if (cartContainer) {
        const observer = new MutationObserver(function(mutations) {
          processCartImages();
        });
        
        observer.observe(cartContainer, {
          childList: true,
          subtree: true
        });
        
        console.log('Cart observer initialized');
      }
    }
  });
</script>

