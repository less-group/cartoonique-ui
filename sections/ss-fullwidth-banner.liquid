        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "Padding bottom",
          "default": 0
        }
	],
   "blocks":[
    
  
   ],
 	"presets": [
      {
          "name": "SS - Fullscreen Banner"
      }
	]
  }
{% endschema %}

