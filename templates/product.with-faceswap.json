    "direct_pixar_test": {
      "type": "custom-liquid",
      "settings": {
        "full_width": false,
        "container_size": "medium",
        "custom_liquid": "<div id=\"direct-pixar-test\" style=\"border: 2px solid red; padding: 15px; margin: 15px 0;\">\n  <h3>Direct Pixar Component Test</h3>\n  <p>This section tests direct component loading</p>\n  <div id=\"direct-component-area\" style=\"min-height: 50px; border: 1px solid #ccc;\">\n    <!-- Component will be created here -->\n  </div>\n  <button id=\"direct-test-button\" style=\"margin-top: 10px; padding: 8px 15px; background: blue; color: white;\">Create Component</button>\n  \n  <script>\n    document.addEventListener('DOMContentLoaded', function() {\n      console.log('Direct test section loaded');\n      \n      // Add click handler to test button\n      const testButton = document.getElementById('direct-test-button');\n      if (testButton) {\n        testButton.addEventListener('click', function() {\n          console.log('Creating direct component');\n          \n          // Find component area\n          const componentArea = document.getElementById('direct-component-area');\n          if (componentArea) {\n            // Create component\n            const component = document.createElement('pixar-transform-file-input');\n            component.setAttribute('data-product-id', '{{ product.id }}');\n            component.setAttribute('data-product-variant-id', '{{ product.selected_or_first_available_variant.id }}');\n            component.setAttribute('data-section-id', 'direct-test');\n            \n            // Add to page\n            componentArea.innerHTML = '';\n            componentArea.appendChild(component);\n            \n            console.log('Component created');\n            \n            // Update button\n            testButton.textContent = 'Component Created';\n            testButton.disabled = true;\n          }\n        });\n      }\n    });\n  </script>\n</div>",
        "background": "",
        "background_gradient": "",
        "text_color": "",
        "section_spacing_top": 36,
